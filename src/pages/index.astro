---
import "../styles/global.css";
import { Image } from "astro:assets";
import { useState } from 'react';

// Component Imports
import CTAForm from "@/components/CTAForm.astro";
import { Button } from "@/components/ui/button";
import MainLayout from "@/layouts/main.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<MainLayout content={{ title: "Mainstreet Capital" }}>
  {/* Header */}
  <header
    class="w-full flex items-center justify-start py-4 px-4 md:px-0 fixed top-0 left-0 bg-black z-50"
  >
    <div class="w-full max-w-6xl mx-auto flex items-center justify-between">
      <a href="#hero" class="hover:text-orange-400 transition pl-1 flex items-center">
        <picture>
          <source srcset="/logo.webp" type="image/webp" />
          <img src="/logo.png" alt="Mainstreet Capital" class="max-w-[160px] w-full h-auto" />
        </picture>
      </a>
      <!-- Desktop Nav -->
      <nav class="hidden md:flex gap-8 text-lg font-sans font-normal">
        <a href="#why-invest" class="hover:text-orange-400 content-center transition">Why Invest</a>
        <a href="#demo-deal" class="hover:text-orange-400 content-center transition">Demo Deal</a>
        <a href="/fund" class="hover:text-orange-400 content-center transition">Fund Details</a>
        <a href="#cta" class="cursor-pointer">
          <Button className="bg-orange-500 hover:bg-orange-600 text-white font-semibold py-2 rounded transition-colors">Get Started</Button>
        </a>
      </nav>
      <!-- Hamburger for Mobile -->
      <button id="mobile-menu-btn" class="md:hidden flex items-center px-2 py-1 text-white focus:outline-none" aria-label="Open menu" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
        <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      </button>
      <!-- Mobile Nav Overlay -->
      <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-95 z-50 flex flex-col items-center justify-center gap-8 text-2xl font-semibold text-white hidden md:hidden transition-all duration-200">
        <a href="#why-invest" class="hover:text-orange-400" onclick="document.getElementById('mobile-menu').classList.add('hidden')">Why Invest</a>
        <a href="#demo-deal" class="hover:text-orange-400" onclick="document.getElementById('mobile-menu').classList.add('hidden')">Demo Deal</a>
        <a href="/fund" class="hover:text-orange-400" onclick="document.getElementById('mobile-menu').classList.add('hidden')">Fund Details</a>
        <a href="#cta" class="hover:text-orange-400" onclick="document.getElementById('mobile-menu').classList.add('hidden')">Get Started</a>
        <button class="absolute top-6 right-6 text-white" aria-label="Close menu" onclick="document.getElementById('mobile-menu').classList.add('hidden')">
          <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>
    </div>
  </header>
  {/* Hero Section */}
  <main class="flex flex-col items-center w-full pt-32">
    <section
      id="hero"
      class="w-full flex flex-col md:flex-row items-center justify-center pb-12 max-w-6xl mx-auto gap-8 md:gap-16 px-4 md:px-0 relative overflow-hidden"
    >
      {/* Mobile-only gradient + image background */}
      <div class="absolute inset-0 h-full w-full md:hidden z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-black/90 to-black/40 z-10"></div>
        <picture>
          <source srcset="/hero.webp" type="image/webp" />
          <img src="/hero.png" alt="Main Street at sunset with shops and trees" class="w-full h-full object-cover blur-[1px] opacity-60 z-0" />
        </picture>
      </div>
      {/* Left: Headline, Subheadline, Form, Supporting Text */}
      <div class="flex-1 flex flex-col justify-center max-w-xl w-full md:w-1/2 mb-8 md:mb-0 relative z-20">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Own the businesses that keep America running.
        </h1>
        <p class="mb-6 text-lg md:text-2xl text-gray-400">
          Invest in recession-proof Main Street companies—like HVAC, auto
          repair, and dry cleaning—with as little as $100.
        </p>
        <div class="mb-2">
          <CTAForm />
        </div>
        <div class="text-sm text-gray-400 mt-2">
          Start investing in less than 5 minutes and with as little as $100.
        </div>
      </div>
      {/* Right: Hero Image */}
      <div class="hidden md:flex flex-1 items-center justify-center w-full md:w-1/2">
        <picture>
          <source srcset="/hero.webp" type="image/webp" />
          <img src="/hero.png" alt="Main Street at sunset with shops and trees" class="rounded-lg shadow-xl w-3/4 max-w-xs md:w-full md:max-w-full object-cover" />
        </picture>
      </div>
    </section>
    {/* Why Invest Section */}
    <section
      id="why-invest"
      class="w-full bg-white text-black py-20 flex flex-col items-center"
    >
      <div
        class="text-center mb-4 text-sm tracking-widest text-gray-500 font-medium"
      >
        WHY INVEST WITH MAINSTREET CAPITAL
      </div>
      <h2 class="text-2xl md:text-5xl font-semibold mb-6 md:mb-12 text-center">
        Smart, Simple Investing in Real Businesses
      </h2>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-6xl w-full px-2 md:px-4"
      >
        {/* Card 1 */}
        <div
          class="bg-white rounded-xl shadow-lg p-4 md:p-8 flex flex-col items-start gap-3 md:gap-4 col-span-1 w-full"
        >
          <span class="text-2xl md:text-3xl text-orange-500">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-circle-check-icon lucide-circle-check"
              ><circle cx="12" cy="12" r="10"></circle><path d="m9 12 2 2 4-4"
              ></path></svg
            >
          </span>
          <h3 class="text-base md:text-xl font-semibold">Diversify Your Portfolio</h3>
          <p class="text-gray-700 text-base md:text-lg">
            Move beyond stocks and bonds by investing in cash-flowing small
            businesses across the U.S.
          </p>
        </div>
        {/* Card 2 */}
        <div
          class="bg-white rounded-xl shadow-lg p-4 md:p-8 flex flex-col items-start gap-3 md:gap-4 col-span-1 w-full"
        >
          <span class="text-2xl md:text-3xl text-orange-500"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-calendar-icon lucide-calendar"
              ><path d="M8 2v4"></path><path d="M16 2v4"></path><rect
                width="18"
                height="18"
                x="3"
                y="4"
                rx="2"></rect><path d="M3 10h18"></path></svg
            ></span
          >
          <h3 class="text-base md:text-xl font-semibold">Earn Passive Income</h3>
          <p class="text-gray-700 text-base md:text-lg">
            Receive quarterly distributions from your investments, just like
            institutional investors.
          </p>
        </div>
        {/* Card 3 */}
        <div
          class="bg-white rounded-xl shadow-lg p-4 md:p-8 flex flex-col items-start gap-3 md:gap-4 col-span-1 w-full"
        >
          <span class="text-2xl md:text-3xl text-orange-500"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-message-circle-icon lucide-message-circle"
              ><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"></path></svg
            ></span
          >
          <h3 class="text-base md:text-xl font-semibold">Invest in Real Assets</h3>
          <p class="text-gray-700 text-base md:text-lg">
            Back tangible businesses with proven revenue, not speculative
            startups or crypto.
          </p>
        </div>
      </div>
      <div class="flex flex-col gap-6 md:gap-8 w-full max-w-6xl px-2 md:px-4 lg:flex-row mt-8">
        {/* Card 4 */}
        <div
          class="bg-white rounded-xl shadow-lg p-4 md:p-8 flex flex-col items-start gap-3 md:gap-4 flex-1 w-full"
        >
          <span class="text-2xl md:text-3xl text-orange-500"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-sparkles-icon lucide-sparkles"
              ><path
                d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"
              ></path><path d="M20 3v4"></path><path d="M22 5h-4"></path><path
                d="M4 17v2"></path><path d="M5 18H3"></path></svg
            ></span
          >
          <h3 class="text-base md:text-xl font-semibold">Support Local Economies</h3>
          <p class="text-gray-700 text-base md:text-lg">
            Help small businesses grow while sharing in their success and
            impact.
          </p>
        </div>
        {/* Card 5 */}
        <div
          class="bg-white rounded-xl shadow-lg p-4 md:p-8 flex flex-col items-start gap-3 md:gap-4 flex-1 w-full"
        >
          <span class="text-2xl md:text-3xl text-orange-500"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-user-icon lucide-user"
              ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"
              ></path><circle cx="12" cy="7" r="4"></circle></svg
            ></span
          >
          <h3 class="text-base md:text-xl font-semibold">Low Minimums, Broad Access</h3>
          <p class="text-gray-700 text-base md:text-lg">
            Start investing with as little as $100—open to both accredited and
            non-accredited investors.
          </p>
        </div>
      </div>
    </section>
    {/* How It Works Section */}
    <section
      class="w-full text-white py-20 flex flex-col items-center bg-[#181716]"
    >
      <div
        class="text-center mb-4 text-sm tracking-widest text-gray-400 font-medium"
      >
        HOW IT WORKS
      </div>
      <h2 class="text-4xl md:text-5xl font-semibold mb-12 text-center">
        How Mainstreet Capital Works
      </h2>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl w-full px-4"
      >
        {/* Step 1 */}
        <div class="flex flex-col items-center text-center">
          <div
            class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mb-6"
          >
            <span class="text-2xl font-bold">1</span>
          </div>
          <h3 class="text-xl font-semibold mb-4">You Invest</h3>
          <p class="text-gray-400">
            Start with as little as $100 to begin your journey as a business
            owner
          </p>
        </div>
        {/* Step 2 */}
        <div class="flex flex-col items-center text-center">
          <div
            class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mb-6"
          >
            <span class="text-2xl font-bold">2</span>
          </div>
          <h3 class="text-xl font-semibold mb-4">We Buy Businesses</h3>
          <p class="text-gray-400">
            We pool capital to acquire vetted, high-margin Main Street
            businesses
          </p>
        </div>
        {/* Step 3 */}
        <div class="flex flex-col items-center text-center">
          <div
            class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mb-6"
          >
            <span class="text-2xl font-bold">3</span>
          </div>
          <h3 class="text-xl font-semibold mb-4">You Earn</h3>
          <p class="text-gray-400">
            Receive quarterly distributions from cash flow and benefit from
            equity growth
          </p>
        </div>
        {/* Step 4 */}
        <div class="flex flex-col items-center text-center">
          <div
            class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mb-6"
          >
            <span class="text-2xl font-bold">4</span>
          </div>
          <h3 class="text-xl font-semibold mb-4">Track & Grow</h3>
          <p class="text-gray-400">
            Monitor your ownership and payouts through your personalized
            dashboard
          </p>
        </div>
      </div>
      <div class="mt-12">
        <a href="#cta">
          <Button
            className="bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-8 rounded-lg text-lg transition-colors"
          >
            Start with $100
          </Button>
        </a>
      </div>
    </section>
    {/* Data-Driven Investing Section */}
    <section
      id="demo-deal"
      class="relative w-full min-h-[500px] flex flex-col items-center justify-center py-20"
    >
      <Image
        src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=1500&q=80"
        alt="Office background"
        width={1500}
        height={1500}
        class="absolute inset-0 w-full h-full object-cover z-0"
      />
      <div class="absolute inset-0 bg-black bg-opacity-60 z-10"></div>
      <div class="relative z-20 w-full max-w-6xl mx-auto px-4">
        {/* Headline (full width) */}
        <h2
          class="text-5xl md:text-6xl font-bold mb-4 leading-tight text-white text-left w-full"
        >
          Demo Deal: Local HVAC Company Acquisition
        </h2>
        {/* Deal Title and Description */}
        <div class="mb-10 w-full">
          <div class="text-base text-gray-200 max-w-3xl mb-2">
            We're acquiring a well-established HVAC business in a growing
            suburban market. With stable cash flow, strong repeat customers, and
            low customer acquisition costs, this deal exemplifies the kind of
            boring-but-beautiful small businesses we bring to our investors. The
            current owner is retiring, and we'll take over with experienced
            operators to continue driving profits.
          </div>
        </div>
        {/* Key Metrics Grid (full width) */}
        <div class="mb-8 w-full">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 md:gap-x-8 gap-y-4 w-full">
            <div
              class="flex flex-col items-start bg-[#23221e] rounded-lg p-4 md:p-6 min-w-0 md:min-w-[240px] shadow-md w-full"
            >
              <span class="text-2xl md:text-4xl font-bold text-white">15</span>
              <span class="text-sm md:text-base text-gray-300">yrs established</span>
            </div>
            <div
              class="flex flex-col items-start bg-[#23221e] rounded-lg p-4 md:p-6 min-w-0 md:min-w-[240px] shadow-md w-full"
            >
              <span class="text-2xl md:text-4xl font-bold text-white"
                >$250K</span
              >
              <span class="text-sm md:text-base text-gray-300">/mo revenue</span>
            </div>
            <div
              class="flex flex-col items-start bg-[#23221e] rounded-lg p-4 md:p-6 min-w-0 md:min-w-[240px] shadow-md w-full"
            >
              <span class="text-2xl md:text-4xl font-bold text-white">25%</span>
              <span class="text-sm md:text-base text-gray-300">target IRR</span>
            </div>
            <div
              class="flex flex-col items-start bg-[#23221e] rounded-lg p-4 md:p-6 min-w-0 md:min-w-[240px] shadow-md w-full"
            >
              <span class="text-2xl md:text-4xl font-bold text-white">98%</span>
              <span class="text-sm md:text-base text-gray-300">occupancy</span>
            </div>
          </div>
        </div>
        {/* Two Tables Side by Side, no background or border, just lines */}
        <div class="flex flex-col md:flex-row gap-8 w-full max-w-full">
          {/* Financial Summary Table (Left) */}
          <div class="overflow-x-auto flex-1 mb-4 md:mb-0">
            <table
              class="w-full min-w-[340px] text-white"
              style="border-collapse:separate; border-spacing:0;"
            >
              <thead>
                <tr class="text-lg">
                  <th
                    colspan="2"
                    class="py-4 px-4 text-left font-bold border-b border-white"
                    >Financial Summary</th
                  >
                </tr>
              </thead>
              <tbody class="text-base">
                <tr class="border-b border-dashed border-white">
                  <td class="py-3 px-4 font-medium">Annual Revenue</td>
                  <td class="py-3 px-4 text-right font-bold">$3,000,000</td>
                </tr>
                <tr class="border-b border-dashed border-white">
                  <td class="py-3 px-4 font-medium">Net Operating Income</td>
                  <td class="py-3 px-4 text-right font-bold">$1,200,000</td>
                </tr>
                <tr class="border-b border-dashed border-white">
                  <td class="py-3 px-4 font-medium">Cap Rate</td>
                  <td class="py-3 px-4 text-right font-bold">15.2%</td>
                </tr>
                <tr>
                  <td class="py-3 px-4 font-medium">Investment Period</td>
                  <td class="py-3 px-4 text-right font-bold">5 Years</td>
                </tr>
              </tbody>
            </table>
          </div>
          {/* Investment Tiers Table (Right) */}
          <div class="overflow-x-auto flex-1">
            <table
              class="w-full min-w-[340px] text-white"
              style="border-collapse:separate; border-spacing:0;"
            >
              <thead>
                <tr class="text-lg">
                  <th
                    class="py-4 px-4 text-left font-bold border-b border-white"
                    >&nbsp;</th
                  >
                  <th
                    class="py-4 px-4 text-center font-bold border-b border-white"
                    >Everyday</th
                  >
                  <th
                    class="py-4 px-4 text-center font-bold border-b border-white"
                    >Community</th
                  >
                  <th
                    class="py-4 px-4 text-center font-bold border-b border-white"
                    >Power</th
                  >
                </tr>
              </thead>
              <tbody class="text-base">
                <tr class="border-b border-dashed border-white">
                  <td class="py-3 px-4 font-medium">Investment</td>
                  <td class="py-3 px-4 text-center">$1,000</td>
                  <td class="py-3 px-4 text-center">$10,000</td>
                  <td class="py-3 px-4 text-center">$100,000</td>
                </tr>
                <tr class="border-b border-dashed border-white">
                  <td class="py-3 px-4 font-medium">Ownership Stake</td>
                  <td class="py-3 px-4 text-center">~0.02%</td>
                  <td class="py-3 px-4 text-center">~0.2%</td>
                  <td class="py-3 px-4 text-center">~2%</td>
                </tr>
                <tr class="border-b border-dashed border-white">
                  <td class="py-3 px-4 font-medium">Annual Income</td>
                  <td class="py-3 px-4 text-center">~$240/year</td>
                  <td class="py-3 px-4 text-center">~$2,400/year</td>
                  <td class="py-3 px-4 text-center">~$24,000/year</td>
                </tr>
                <tr>
                  <td class="py-3 px-4 font-medium">5-Year Return</td>
                  <td class="py-3 px-4 text-center">~$3,052</td>
                  <td class="py-3 px-4 text-center">~$30,520</td>
                  <td class="py-3 px-4 text-center">~$305,200</td>
                </tr>
              </tbody>
            </table>
            <div class="mt-4 text-xs md:text-sm text-gray-300">
              <p class="mb-2">
                * Returns are calculated using a 20% target IRR, which includes
                both quarterly distributions and final exit value.
              </p>
              <p class="mb-2">
                ** The 5-year return includes your initial investment plus
                accumulated returns.
              </p>
              <p>
                *** These are projected returns and actual results may vary
                based on business performance.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    {/* Final CTA Section */}
    <section
      id="cta"
      class="w-full bg-[#23221e] text-white py-10 md:py-24 flex flex-col items-center"
    >
      <h2 class="text-2xl md:text-6xl font-bold mb-4 md:mb-6 text-center">
        Invest in America's most reliable businesses.
      </h2>
      <p class="text-base md:text-xl text-gray-300 mb-6 md:mb-10 text-center max-w-full md:max-w-2xl">
        Join Mainstreet Capital and start earning real income from
        recession-proof companies—without needing millions or a finance degree.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 w-full max-w-md items-center px-4 mt-4">
        <CTAForm />
      </div>
    </section>
    {/* Footer */}
    <footer
      class="w-full bg-white text-gray-800 pt-16 pb-8 border-t border-gray-200"
    >
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-col items-center gap-4 mb-8">
          <a
            href="#hero"
            class="hover:text-orange-400 transition flex items-center gap-2 mb-2"
          >
            <Image
              src="/logo-color.png"
              alt="Mainstreet Capital"
              width={256}
              height={256}
            />
          </a>
          <nav class="flex gap-8 text-base font-medium mb-2">
            <a href="#why-invest" class="hover:text-orange-400 transition"
              >Why Invest</a
            >
            <a href="#demo-deal" class="hover:text-orange-400 transition"
              >Demo Deal</a
            >
            <a href="#cta" class="hover:text-orange-400 transition"
              >Get Started</a
            >
          </nav>
        </div>
        <div class="text-xs text-gray-500 text-center">
          © 2025 All rights reserved
        </div>
      </div>
    </footer>
  </main>
</MainLayout>
